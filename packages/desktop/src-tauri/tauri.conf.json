{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Assistant",
  "version": "0.6.0",
  "identifier": "com.assistant.desktop",
  "build": {
    "frontendDist": "../../web-client/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Assistant",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "infoPlist": "Info.plist"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
